<% layout('/layouts/boilerplate') -%>

<div class="row mt-5 signup-css">
  <h1 class="col-6 offset-3" style="font-size: 2rem;">Signup on wonderlund</h1>
  <div class="col-5 offset-3">
    <form action="/users/signup" method="POST" class="needs-validation" novalidate>
      <div class="md-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">good username</div>
      </div>
      <div class="md-3">
        <label for="email" class="form-label">Email</label>
        <input
          name="email"
          id="email"
          type="text"
          class="form-control"
          required
        />
      </div>
      <div class="md-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>
<br>
      <button class="btn btn-success">signup</button>
    </form>
  </div>
</div>
