<% layout('/layouts/boilerplate') -%>

<style>
  .filters {
    flex-wrap: wrap;
    gap: 1rem;
  }

  .filter {
    text-align: center;
    opacity: 0.8;
    transition: 0.2s;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.85rem;
    margin-top: 0.3rem;
  }

  .tex-info {
    display: none;
  }

  .tex-toggle {
    border: 1px solid rgb(58, 56, 56);
    border-radius: 0.75rem;
    padding: 0.75rem 1rem;
    height: 2.75rem;
    display: flex;
    align-items: center;
    white-space: nowrap;
  }

  .listing-link {
    text-decoration: none;
    color: inherit;
  }

  .listing-card img {
    height: 18rem;
    object-fit: cover;
  }
</style>

<!-- Filters -->
<div class="container-fluid d-flex flex-wrap align-items-center justify-content-center filters my-3 px-2">
  <div class="filter"><i class="fa-solid fa-fire"></i><p>Trending</p></div>
  <div class="filter"><i class="fa-solid fa-spinner"></i><p>Spinner</p></div>
  <div class="filter"><i class="fa-solid fa-bed"></i><p>Room</p></div>
  <div class="filter"><i class="fa-solid fa-mountain-city"></i><p>Iconic Cities</p></div>
  <div class="filter"><i class="fa-solid fa-mountain"></i><p>Mountains</p></div>
  <div class="filter"><i class="fa-solid fa-chess-rook"></i><p>Castles</p></div>
  <div class="filter"><i class="fa-solid fa-person-swimming"></i><p>Pool</p></div>
  <div class="filter"><i class="fa-solid fa-campground"></i><p>Camping</p></div>
  <div class="filter"><i class="fa-solid fa-cow"></i><p>Farms</p></div>
  <div class="filter"><i class="fa-solid fa-hexagon-nodes"></i><p>Arctic</p></div>

  <!-- Toggle -->
  <div class="tex-toggle ms-3 mt-2">
    <div class="form-check form-switch m-0">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault">
        Display total after taxes
      </label>
    </div>
  </div>
</div>

<!-- Listings -->
<div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4 justify-content-center">
    <% for (let listing of allListing) { %>
      <div class="col">
        <a href="/listing/<%= listing._id %>" class="listing-link">
          <div class="card listing-card h-100">
            <img
              src="<%= listing.image.url %>"
              class="card-img-top"
              alt="listing image"
            />
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <strong><%= listing.title %></strong><br />
                &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                <i class="tex-info">&nbsp;&nbsp;+18% GST</i>
              </p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>

<!-- Toggle Script -->
<script>
  const texswitch = document.getElementById("switchCheckDefault");
  texswitch.addEventListener("click", () => {
    const texinfo = document.getElementsByClassName("tex-info");
    for (let info of texinfo) {
      info.style.display = info.style.display !== "inline" ? "inline" : "none";
    }
  });
</script>
